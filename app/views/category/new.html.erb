<section>
  <div class="d-flex align-items-center justify-content-around my-4">
    <%= link_to "Back", category_index_path, class: "btn btn-secondary" %>
    <h3>New Category</h3>
    <i></i>
  </div>
  <%= form_with model: @category, url: category_index_path, method: :post do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %><br />
      <%= f.email_field :name, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
     <div class="mb-3">
      <%= f.label :icon, class: "form-label" %><br />
      <%= f.url_field :icon, class: "form-control" %>
    </div>
    <div class="d-flex justify-content-center">
      <%= f.submit "Create Category", class: "btn btn-primary" %>
    </div>
  <% end %>
</section>